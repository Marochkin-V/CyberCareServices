<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberCareServices</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CyberCareServices.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMsP8kA4Yvtx1vGR5xkKxW8p4XA6VGnC5f5jhvV" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <!-- Логотип -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CyberCareServices</a>
                <!-- Кнопка для мобильной версии -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Ссылки навигации -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="ComponentTypes" asp-action="Index">ComponentTypes</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Components" asp-action="Index">Components</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Services" asp-action="Index">Services</a></li>
                    </ul>
                    <!-- Частичная секция для входа -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CyberCareServices - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
