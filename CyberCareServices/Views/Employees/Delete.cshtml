@model CyberCareServices.Model.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete</h1>
<hr />
<div>
    <h4>@Model.FullName</h4>
    <dl class="row">
        <dt class="col-sm-3">Position</dt>
        <dd class="col-sm-9">@Model.Position</dd>

        <dt class="col-sm-3">Date of Hire</dt>
        <dd class="col-sm-9">@Model.DateOfHire.ToShortDateString()</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>
    </dl>
</div>
<hr />

<h3>Are you sure you want to delete this customer?</h3>

<form asp-action="Delete">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="page page-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="page page-primary backtolist-btn"><i class="bi bi-arrow-left"></i>  Back to List  <i class="bi bi-arrow-left"></i></a>
</div>
