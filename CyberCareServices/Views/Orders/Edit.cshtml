@model CyberCareServices.ViewModels.OrderEditViewModel

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order #@Model.OrderId</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="CustomerName" class="control-label"></label>
        <select asp-for="CustomerName" class="form-control textarea-custom" asp-items="@(new SelectList(Model.Customers, "FullName", "FullName"))"></select>
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeName" class="control-label"></label>
        <select asp-for="EmployeeName" class="form-control textarea-custom" asp-items="@(new SelectList(Model.Employees, "FullName", "FullName"))"></select>
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderDate" class="control-label"></label>
        <input asp-for="OrderDate" class="form-control textarea-custom" type="date" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompletionDate" class="control-label"></label>
        <input asp-for="CompletionDate" class="form-control textarea-custom" type="date" />
        <span asp-validation-for="CompletionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalCost" class="control-label"></label>
        <input asp-for="TotalCost" class="form-control textarea-custom" type="number" step="0.01" />
        <span asp-validation-for="TotalCost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prepayment" class="control-label"></label>
        <input asp-for="Prepayment" class="form-control textarea-custom" type="number" step="0.01" />
        <span asp-validation-for="Prepayment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentStatus" class="control-label"></label>
        <input asp-for="PaymentStatus" type="checkbox" class="checkbox-custom" />
        <span asp-validation-for="PaymentStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompletionStatus" class="control-label"></label>
        <input asp-for="CompletionStatus" type="checkbox" class="checkbox-custom" />
        <span asp-validation-for="CompletionStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarrantyPeriod" class="control-label"></label>
        <input asp-for="WarrantyPeriod" class="form-control textarea-custom" />
        <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
    </div>

    <div class="form-group btn-center">
        <input type="submit" value="Save" class="page page-primary save-btn" />
    </div>
</form>

<div>
    <a asp-action="Index" class="page page-primary backtolist-btn"><i class="bi bi-arrow-left"></i>  Back to List  <i class="bi bi-arrow-left"></i></a>
</div>