@model CyberCareServices.Model.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h1>@Model.FullName</h1>
<hr />
<div>
    <h3>Details:</h3>
    <dl class="row">
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Date of Hire</dt>
        <dd class="col-sm-10">@Model.DateOfHire.ToShortDateString()</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth?.ToString("d")</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="page page-primary">Edit</a>
    }
    <a asp-action="Index" class="page page-primary backtolist-btn"><i class="bi bi-arrow-left"></i>  Back to List  <i class="bi bi-arrow-left"></i></a>
</div>
