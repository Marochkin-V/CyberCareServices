@model CyberCareServices.Model.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Discount Available</dt>
        <dd class="col-sm-10">@Model.DiscountAvailable ? "Yes" : "No"</dd>

        @if (Model.DiscountAvailable)
        {
            <dt class="col-sm-2">Discount Amount</dt>
            <dd class="col-sm-10">@Model.DiscountAmount%</dd>
        }
    </dl>
</div>

<hr />

<h3>Are you sure you want to delete this customer?</h3>

<form asp-action="Delete">
    <input type="hidden" asp-for="CustomerId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="page page-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="page page-primary backtolist-btn"><i class="bi bi-arrow-left"></i>  Back to List  <i class="bi bi-arrow-left"></i></a>
</div>
