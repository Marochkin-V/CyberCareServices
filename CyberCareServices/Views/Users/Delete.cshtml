@model CyberCareServices.ViewModels.UserDetailsViewModel

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<hr />

<h3>Are you sure you want to delete this user?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="page page-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="page page-primary backtolist-btn"><i class="bi bi-arrow-left"></i> Back to List <i class="bi bi-arrow-left"></i></a>
</div>
