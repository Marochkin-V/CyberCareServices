@using CyberCareServices.Model
@model CyberCareServices.ViewModels.EmployeesViewModel

@{
    ViewData["Title"] = "Employees Overview";
}

<h1>Employees</h1>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Position</th>
            <th width="10%">Hired On</th>
            <th width="10%">Date of Birth</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr onclick="location.href='@Url.Action("Details", "Employees", new { id = employee.EmployeeId })';">
                <td>@employee.EmployeeId</td>
                <td>@employee.FullName</td>
                <td>@employee.Position</td>
                <td>@employee.DateOfHire.ToString("yyyy-MM-dd")</td>
                <td>@employee.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>@employee.Phone</td>
                <td>@employee.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-link cruid-icon">
                        <i class="bi bi-pencil-square edit-i"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-link text-danger cruid-icon">
                        <i class="bi bi-trash delete-i"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="add-container">
    <a asp-action="Create" class="page page-primary">Add New Employee</a>
</div>