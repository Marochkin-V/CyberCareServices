@model CyberCareServices.ViewModels.UserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
}

<h1>@Model.UserName</h1>
<hr />
<div>
    <h3>Details:</h3>
    <dl class="row">
        <dt class="col-sm-2 dt-custom">User ID</dt>
        <dd class="col-sm-10 dd-custom">@Model.UserId</dd>

        <dt class="col-sm-2 dt-custom">User Name</dt>
        <dd class="col-sm-10 dd-custom">@Model.UserName</dd>

        <dt class="col-sm-2 dt-custom">Email</dt>
        <dd class="col-sm-10 dd-custom">@Model.Email</dd>

        <dt class="col-sm-2 dt-custom">Roles</dt>
        <dd class="col-sm-10 dd-custom">
            @foreach (var role in Model.Roles)
            {
                <span>@role</span>

                <br />
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-userId="@Model.UserId" class="page page-primary">Edit</a>
    <a asp-action="Index" class="page page-primary backtolist-btn">
        <i class="bi bi-arrow-left"></i> Back to List <i class="bi bi-arrow-left"></i>
    </a>
</div>
