@model CyberCareServices.ViewModels.ServicesViewModel

@{
    ViewData["Title"] = "Services Overview";
}

<div class="table-name">
    <h1>Services</h1>
    <div class="plus-ico">
        <a asp-action="Create"><i class="bi bi-plus-circle-dotted"></i></a>
    </div>
</div>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.Services)
        {
            <tr onclick="location.href='@Url.Action("Details", "Services", new { id = service.ServiceId })';">
                <td>@service.ServiceId</td>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Cost.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-link cruid-icon">
                        <i class="bi bi-pencil-square edit-i"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@service.ServiceId" class="btn btn-link text-danger cruid-icon">
                        <i class="bi bi-trash delete-i"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="add-container">
    <a asp-action="Create" class="page page-primary">Add New Order</a>
</div>