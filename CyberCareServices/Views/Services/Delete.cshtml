@model CyberCareServices.Model.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h1>Delete Service</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Model.Cost.ToString("C")</dd>
    </dl>
</div>

<hr />

<h3>Are you sure you want to delete this service?</h3>

<form asp-action="Delete">
    <input type="hidden" asp-for="ServiceId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="page page-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="page page-primary backtolist-btn"><i class="bi bi-arrow-left"></i>  Back to List  <i class="bi bi-arrow-left"></i></a>
</div>