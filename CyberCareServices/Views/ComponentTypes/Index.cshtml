@using CyberCareServices.Model
@model CyberCareServices.ViewModels.ComponentTypesViewModel

@{
    ViewData["Title"] = "Component Types Overview";
}

<h1>Component Types</h1>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th width="20%">Type Name</th>
            <th>Description</th>
            <th width="10%">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var componentType in Model.ComponentTypes)
        {
            <tr>
                <td>@componentType.ComponentTypeId</td>
                <td>@componentType.Name</td>
                <td>@(string.IsNullOrEmpty(componentType.Description) ? "Нет описания" : componentType.Description)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@componentType.ComponentTypeId">Просмотр</a> |
                    <a asp-action="Edit" asp-route-id="@componentType.ComponentTypeId">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@componentType.ComponentTypeId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить новый тип компонента</a>